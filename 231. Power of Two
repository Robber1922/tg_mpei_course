//https://leetcode.com/problems/power-of-two/

class Solution {
public:
    bool isPowerOfTwo(int n) {
        /*if (n=1)
            return true;
        if (n<=0)
            return false;
        while ((n%2)==0){
            if ((n/=2)==1)
                return true;
            } 
                return false;   */
        if (n<=0)
            return false;
        return ( n & (n - 1) ) == 0;


    }
};
